//   max-width: 100%

.volunteer-btn
  margin: 0.5em 0
.strong
  font-weight: bold

#map
  margin-bottom: 1em

.poster-btn
  margin-left: 0.5em

.sustinator
  color: white
  &.sustinator-nume
    span
      padding: 0.1em 0.2em
      background: #00679e
  &.sustinator-text
    background: #00679e
    padding: 0.1em 0.2em

div.pluginConnectButton
  display:none !important
