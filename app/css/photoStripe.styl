.photoStripe
  position: relative
  height: 100vh
  width: 100vw
  color: white
  overflow: hidden
  .imgBack
    position: absolute;
    top: 0;
    left: 0;
    height: 100%
    width: 100%
    background-size: cover
    background-position: center center

  .hotlinks
    a
      padding: 0.2em 0.6em
      border: 3px solid white
      color: white
      text-decoration: none
      margin-left: 1em
      margin-right: 1em
      &:hover
        background: white
        color: black
        text-decoration: none

  .overlay
    position: absolute
    top: 0
    background: rgba(0,0,0,0.4)
    height: 100%
    width: 100%
    .callout
      margin-top: 60vh
      text-align: center
      font-size: 2.3em
      line-height: 110%
      margin-left: 1em
      margin-right: 1em
    .hotlinks
      margin-top: 1em
      text-align: center
      font-size: 1em

    .facebook-iframe > iframe
      margin: 0 auto
      text-align: center
      margin-top: 2em

    .chevron
      position: absolute
      left: 50%
      transform: translateX(-50%)
      bottom: 10px
      .hi-icon-wrap
        padding: 0
        .hi-icon
          margin: 0
          font-size: 15px
          width: 45px
          height: 45px
          z-index: 0
          &:hover
            box-shadow: 0 0 0 5px rgba(255,255,255,1)
          i
            position: absolute
            top: 50%
            left: 50%
            transform: translate3d(-50%, -50%, 0);
      @media(max-width: 767px)
        .chevron
          bottom: 0
  video
    min-width: 100%
    min-height: 100%

  @media (max-width: 767px)
    .imgBack
      top: 0;

  @media (max-width: 500px)
    .imgBack
      left: 0;
    .hotlinks
      a
        display: block
        margin: 1em;
        padding: 0.5em;
    .overlay
      .callout
        margin-top: 50vh
