@import variables
@import overrides
@import media
@import hero
@import msie
@import donatii

body
  font-size: 20px
  line-height: 1.5em
  font-family: font-family-sans
  background: #eee
  padding-top: 50px

  @media (max-width: 767px)
    font-size: 14px
    &[data-page='home']
      padding-top: 43px + 20 * 14px

.content
  margin-top: 15px
  padding: 15px
  background: white

[role="page-container"]
  @media (max-width: 767px)
    background: #eee
    border-top: 0.5em solid rgba(mm-red, 1.0)

.post
  blockquote
    font-size: 1em
    line-height: 1.5em

#mc_embed_signup input.button
  background: mm-orange
  transition: background .1s linear
  &:hover
    background: mm-dark-blue

.full-circle
  background-color: #c06
  height: 4em
  border-radius:50%
  width: 4em

#Options
  .collapse, .collapsing, .collapse.in
    border-left: #dff0d8 1px solid
    border-right: #dff0d8 1px solid
    padding: 1em

// iframe.live
