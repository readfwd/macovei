.paypal > .inline-block
    margin-left: 0.2em
    margin-right: 0.2em
    display: inline-block

.nav.donation-pills > li
  cursor: pointer
  background: #3C763D
  > a
    position: relative
    color: white
    padding-top: 1.3em
    padding-bottom: 1.3em
    &:hover
      background: darken(mm-orange,15%)
    i
      position: absolute
      right: 0.5em
      top: 50%
      transform: translate3d(0, -50%, 0)
    
  a[data-target="#sms"]
    i
      right: 0.2em
      font-size: 24px