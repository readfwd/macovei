.letters
  .letter
    background-size: contain
    background-repeat: no-repeat
    height: 40em
    position: relative
    #back
      width: auto
      height: 100%
    #backSmall
      height: 100%
      max-width: 100%
    .letter-overlay
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background: rgba(0, 0, 0, 0.6)
      z-index: 10
      h1
        color: white
      h1, a
        position: absolute
        top: 40%
        left: 40%
        transform: translate3d(-40%, -40%, 0)
      a
        top: 50%
        transform: translate3d(-50%, -40%, 0)
    .not-valid
      border: 2px solid mm-red
    .letter-text
      text-align: left
      width: 50%
      position: absolute
      top: 12%
      left: 7%
      padding: 1em
    @media(max-width: 1199px)
      .letter-text
        top: 12%
    @media(max-width: 992px)
      .letter-text
        top: 15%
        left: 12%
    @media(max-width: 767px)
      .letter-text
        top: 15%
        left: 15%
        padding: 0 1em
    .letter-content
      text-align: left
      position: absolute
      top: 22%
      left: 7%
      width: 30%
      padding-left: 1em
    @media(max-width: 1199px)
      .letter-content
        top: 21%
        width: 40%
    @media(max-width: 992px)
      .letter-content
        top: 25%
        width: 70%
        left: 12%
    @media(max-width: 767px)
      .letter-content
        font-size: 0.8em
        width: 65%
        left: 15%
        top: 20%
    .letter-destination, .letter-source
      position: absolute
      top: 37%
      right: 25%
      width: 30%
    .letter-source
      top: 45%

    .help-block
      display: none

    .letter-dest-group
      &:not(.success)
        .letter-dest-valid
          display: none
      &:not(.warning)
        .letter-dest-warn
          display: none
      .letter-dest-valid
        color: green
      .letter-dest-warn
        color: red

    @media(max-width: 1199px)
      .letter-destination, .letter-source
        right: 10%
        width: 35%
    @media(max-width: 992px)
      .letter-destination, .letter-source
        position: absolute
        top: 63%
        width: 50%
        right: 15%
      .letter-source
        top: 67%
    @media(max-width: 767px)
      .letter-destination, .letter-source
        top: 63%
        left: 13%
        width: 65%
      .letter-source
        top: 69%
    .letter-send
      position: absolute
      bottom: 0%
      left: 35%
      img
        width: 80%
    .letter-send:hover
      cursor: pointer
      transform: scale(1.2)
    @media(max-width: 1199px)
      .letter-send
        bottom: 3%
    @media(max-width: 992px)
      .letter-send
        bottom: 3%
        left:35%
        img
          width:70%
    @media(max-width: 767px)
      .letter-send
        bottom: 0
  @media(max-width: 992px)
