//   max-width: 100%


.volunteer-btn
  margin: 0.5em 0
.strong
  font-weight: bold

#map
  margin-bottom: 1em

.poster-btn
  margin-left: 0.5em

#credit-card .modal-body div
  img
    display: inline-block
    &.master-card
      width: 20%
      height: auto
  .credit-card
    top: 17%
    right: 50%
    transform: translate3d(0 0, 0)
    font-size: 1.5em
