// Add posts related styling here
.postShow
  img
    margin: 0 auto
    max-height: 300px
    width: auto
  .content
    margin-top: 0 !important

  .post
    h3.post-title
      font-weight: bold

.btn-facebook
  position: relative
  border-radius: 3px
  box-shadow: 0 1px 1px #999
  display: inline-block
  font-size: 16px
  padding: 10px
  text-align: center
  width: 2.5em
  height: 2.5em
  background-color: #2b4170
  background: linear-gradient(top, #3b5998, #2b4170)
  border: 1px solid #2b4170
  text-shadow: 0 -1px -1px #1f2f52
  &:hover
    background-color: #3b5998
    background: linear-gradient(top, #2b4170, #3b5998)
  i
    position: absolute
    top: 50%
    left: 50%
    transform: translate3d(-50%, -50%, 0)
